@model DDAC_Project.Models.User
@{
}

<div class="container shadow-lg p-3 mt-5" style="width:auto;max-width:500px;">

    <div class="container mt-2">
        <div class="d-flex p-2 m-1 justify-content-center md-2">
            <label class="label fs-1 fw-bolder nav-blue text-justify">
                Forgot Password
            </label>
        </div>
    </div>
    <div class="container-xl mt-5 ps-3 pe-3">
        @using (Html.BeginForm("postforgotpassword", "Auth", FormMethod.Post))
        {
        <form>
            <div class="form-group mt-2 mb-2">
                @Html.LabelFor(m => m.Email, new { @class = "fw-bold fs-6" })
                @Html.TextBoxFor(m => m.Email, "", new {required="Required", @class = "form-control border border-dark mt-1 shadow", @placeholder = "Enter your current email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mt-2 mb-2">
                @Html.LabelFor(m => m.SecurityAns, new { @class = "fw-bold fs-6" })
                @Html.TextBoxFor(m => m.SecurityAns, "", new { required = "Required", @class = "form-control border border-dark mt-1 shadow", @placeholder = "Which is your favourite fruit?" })
                @Html.ValidationMessageFor(m => m.SecurityAns, "", new { @class = "text-danger" })
            </div>
            @Html.ValidationMessage("fail", new { @class = "text-danger" })

            <div class="row">
                <div class="d-flex p-2 m-1 justify-content-center md-2">
                    <button type="submit" class="btn rounded rounded-3 nav-bg-colour text-white fs-4 shadow-lg col col-7 mt-4">Submit</button>
                </div>
            </div>

        </form>
        }
    </div>
</div>