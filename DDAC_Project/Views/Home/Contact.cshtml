@model DDAC_Project.Models.User

@{
    User user = ViewBag.User;
}
<div class="container-xxl border border-0 shadow-lg pt-2 border-secondary"
     style="height:130px;border-radius: 10px;">
    <div class="d-flex p-3 m-4 justify-content-between md-2">
        <label class="label fs-3 fw-bold">
            Admin's Contact Details
        </label>
    </div>
</div>

<div class="container shadow-lg p-4 mt-5" style="width:auto;max-width:700px;">
    <div class="container-xl mt-2 ps-3 pe-3">
        <div class="row d-flex">
            <div class="col">
                <h3><b>General Information</b></h3>
            </div>
        </div>
        <hr />
 
        <div class="row d-flex">
            <div class="col col-4">
                <b>Name:</b>
            </div>
            <div class="col">
                @(user.Admin.FirstName == null ? "-" : user.Admin.FirstName) @(user.Admin.LastName == null ? "-" : user.Admin.LastName)
            </div>
        </div>
        <div class="row d-flex">
            <div class="col col-4">
                <b>Email :</b>
            </div>
            <div class="col">
                @(user.Email)
            </div>
        </div>
        <div class="row d-flex">
            <div class="col col-4">
                <b>Contact No:</b>
            </div>
            <div class="col">
                @(user.Admin.ContactNo.ToString() == null ? "-" : user.Admin.ContactNo.ToString())
            </div>
        </div>
        <div class="row d-flex">
            <div class="col col-4">
                <b>Gender:</b>
            </div>
            <div class="col">
                @(user.Admin.Gender == 0 ? "-" : user.Admin.Gender == 1 ? "Male" : "Female")
            </div>
        </div>
        <hr />
        <div class="row mt-2">
            <div class="col">
                <h3><b>Address</b></h3>
            </div>
        </div>
        <hr />
        <div class="row d-flex ">
            <div class="col col-4">
                <b>Full Address :</b>
            </div>
            <div class="col">
                @(user.Admin.Address.Line)
            </div>
        </div>
        <div class="row d-flex">
            <div class="col col-4">
                <b>City :</b>
            </div>
            <div class="col">
                @(user.Admin.Address.City)
            </div>
        </div>
        <div class="row d-flex">
            <div class="col col-4">
                <b>Region :</b>
            </div>
            <div class="col">
                @(user.Admin.Address.Region)
            </div>
        </div>
        <div class="row d-flex">
            <div class="col col-4">
                <b>Postcode :</b>
            </div>
            <div class="col">
                @(user.Admin.Address.PostCode)
            </div>
        </div>
        <div class="row d-flex">
            <div class="col col-4">
                <b>Country :</b>
            </div>
            <div class="col">
                @(user.Admin.Address.Country)
            </div>
        </div>


    </div>
</div>